  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "cpx": "^1.5.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "typescript": "^4.0.0",
    "typescript-eslint": "^8.31.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
